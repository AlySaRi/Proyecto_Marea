<section class="auth-screen">
  <div class="forgot-password-page">

    <!-- Logo -->
    <img class="captura-de-pantalla" src="/images/LogoIso.png" />

    <!-- Botón Back -->
    <a href="javascript:history.back()">
      <img class="chevron-backward" src="/images/chevron_backward.png" alt="Back">
    </a>

    <!-- Títulos -->
    <div class="text-wrapper-5">Forgot Password?</div>
    <p class="p">Enter your email to regenerate your password.</p>

    <!-- Formulario -->
    <form action="/forgot-password" method="POST" class="auth-form" id="formEmail">
      <div class="input-group">
        <input id="email" type="email" name="email" placeholder="Tu email" required>
      </div>
      <button type="submit">Enviar enlace</button>
    </form>

  </div>
</section>
