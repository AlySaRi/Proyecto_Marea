<h1>{{project.title}}</h1>
<hr>

<section class="project-detail">

  <!-- Imagen grande -->
  {{#if project.imageUrl}}
    <img src="{{project.imageUrl}}" alt="{{project.title}}" width="400" style="border-radius: 10px;">
  {{/if}}

  <br><br>

 <!-- Lugar -->
  {{#if project.location}}
    <p><strong>Lugar donde se encontró:</strong> {{project.location}}</p>
  {{/if}}


  <!-- Descripción -->
  <h3>Descripción</h3>
  <p>
    {{#if project.description}}
      {{project.description}}
    {{else}}
      <i>No hay descripción añadida.</i>
    {{/if}}
  </p>

  <br>

  <!-- Botones -->
  <a href="/gallery">
    <button>Volver</button>
  </a>

  <form action="/projects/{{project.id}}/delete" method="POST" style="display: inline;" onsubmit="return confirm('¿Eliminar este registro?')">
      <button type="submit">Eliminar</button>
    </form>

  
  <a href="/projects/{{project.id}}/edit">
    <button type="button">Editar</button>
  </a>

</section>

<br>

<footer>© 2025 Mis recuerdos.</footer>