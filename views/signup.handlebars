<section class="auth-screen">
  <!-- Logo -->
  <div class="logo">
    <img src="/images/logo.png" alt="Marea Logo">
  </div>

  <!-- Títulos -->
  <div class="auth-header">
    <h2>Sign Up</h2>
    <p>Sign up now to create your Marea Journal and explore the marine world!</p>
  </div>

  <!-- Formulario -->
  <form action="/signup" method="POST" class="auth-form">
    <input type="text" name="name" placeholder="Name" required>
    <input type="email" name="email" placeholder="Email Address" required>
    <input type="password" name="password" placeholder="Password" required>
    <button type="submit">Sign Up</button>
  </form>

  <!-- Opción para iniciar sesión -->
  <p class="auth-footer">Already have an account? <a href="/login">Sign In</a></p>
</section>