
<section class="auth-screen">
<div class="sign-up">

<!-- Logo o captura -->
  <img class="captura-de-pantalla" src="/images/turtle.png" />

<!-- Boton Back -->
  <a  href='javascript:history.back()'>
    <img class="chevron-backward" src="/images/chevron_backward.png" alt="Back">
  </a>

<!-- Títulos -->
  <div class="text-wrapper-5">Sign Up</div> 
<!-- Texto descriptivo -->
  <p class="p">Sign in now to acces your records and save new ones.</p>

<!-- Formulario  -->
  <form action="/signup" method="POST" class="auth-form">

    <div class="input-group">
    <input id="name" type="text" name="name" placeholder="Name">
    </div>

    <div class="input-group">
    <input id="email" type="email" name="email" placeholder="Email Address">
    </div>

    <div class="input-group">
    <input id="password" type="password" name="password" placeholder="Password">
    </div>

    <!-- Botón SING UP -->
  <button type="submit" class="button-cat login-btn">
      <div class="div">SING UP</div>
    </button>
    
  </form>

   
    <!-- Footer / login -->
    <p class="already-have-an">
      <span class="text-wrapper">Already have an account? </span>
      <span class="span"><a href="/login">Sign In</a></span>
    </p>

  </div>

 

  <script src="/js/validacionSignup.js"></script>
</section>

